{
  "manifest_version": 3,
  "name": "YouTube Player for Twitch",
  "version": "1.3.1",
  "description": "Watch YouTube livestreams with Twitch chat - the best of both worlds",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "twitch-content.js"
      ],
      "css": [
        "twitch-styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "all_frames": true,
      "js": [
        "youtube-content.js"
      ],
      "css": [
        "youtube-styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["youtube-inject.js"],
      "matches": [
        "https://www.twitch.tv/*",
        "https://www.youtube.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
