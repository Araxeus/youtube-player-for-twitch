{
  "manifest_version": 3,
  "name": "YouTube on Twitch",
  "version": "1.1.0",
  "description": "Watch YouTube livestreams with Twitch chat - the best of both worlds",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "twitch-content.js"
      ],
      "css": [
        "twitch-styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}